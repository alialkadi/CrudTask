@model CrudTask.PL.ViewModels.ProductViewModel

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white text-center">
                    <h4>Are you sure you want to delete this product?</h4>
                </div>
                <div class="card-body">
                    <h5>@Model.Products.First().Name</h5>
                    <p>@Model.Products.First().Description</p>
                    <p><strong>Price:</strong> @Model.Products.First().Price.ToString("C")</p>
                    <p><strong>Quantity:</strong> @Model.Products.First().Quantity</p>
                    <p><strong>Expiration Date:</strong> @Model.Products.First().ExpirationDate.ToString("yyyy-MM-dd")</p>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" name="id" value="@Model.Products.First().Id" />
                        <div class="text-center">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
